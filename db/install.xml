<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/envbar/db" VERSION="20160106" COMMENT="XMLDB file for Moodle local/envbar"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_envbar" COMMENT="A list of envbar sets">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="colorbg" TYPE="char" LENGTH="64" NOTNULL="true" SEQUENCE="false" COMMENT="Background color"/>
        <FIELD NAME="colortext" TYPE="char" LENGTH="64" NOTNULL="true" SEQUENCE="false" COMMENT="Text color"/>
        <FIELD NAME="matchpattern" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Match pattern"/>
        <FIELD NAME="showtext" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Text to show"/>
        <FIELD NAME="enabled" TYPE="int" LENGTH="1" DEFAULT="0" UNSIGNED="true"  NOTNULL="true" SEQUENCE="false" COMMENT="Enabled Flag"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_match" UNIQUE="true" FIELDS="matchpattern" COMMENT="match pattern index"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
